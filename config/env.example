# WordPress REST API Configuration
WORDPRESS_URL=https://your-site.com
WORDPRESS_USERNAME=your_username
WORDPRESS_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx

# Alternativa: JWT Token (se usi plugin JWT)
# WORDPRESS_JWT_TOKEN=your_jwt_token_here

# LLM Configuration (per rewrite.py)
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Database per deduplicazione
DEDUPE_DB_PATH=./data/dedupe.db

# Logging
LOG_LEVEL=INFO
LOG_DIR=./data/logs

# Pipeline settings
DRY_RUN=false
MAX_RETRIES=3
ARTICLES_LIMIT=20

# Quality gates thresholds
SIMILARITY_THRESHOLD=0.85  # 0-1, soglia per considerare duplicato
MIN_ARTICLE_LENGTH=200  # parole minime
MAX_ARTICLE_LENGTH=2000  # parole massime

# Email Notifications (opzionale)
EMAIL_NOTIFICATIONS_ENABLED=false
EMAIL_PROVIDER=resend  # resend, sendgrid, smtp
EMAIL_RECIPIENT=your-email@example.com
EMAIL_FROM=noreply@yourdomain.com

# Resend (consigliato per Vercel) - https://resend.com
RESEND_API_KEY=

# SendGrid (alternativa) - https://sendgrid.com
SENDGRID_API_KEY=

# SMTP (alternativa standard)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
